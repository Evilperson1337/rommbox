<Window x:Class="RomMbox.UI.Views.ImportReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Import Report"
        Height="520"
        Width="860"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow"
        Background="#141822">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Import Report" FontSize="18" FontWeight="Bold" Foreground="#F5F7FF" />
            <TextBlock Text="{Binding SummaryText}" Foreground="#AAB4C8" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Background="#141822"
                  BorderBrush="#2D374B"
                  Foreground="#E6EBF5"
                  GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game" Binding="{Binding GameTitle}" Width="2*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120" />
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Width="120" Command="{Binding CloseCommand}" />
        </StackPanel>
    </Grid>
</Window>
