<UserControl x:Class="RomMbox.UI.Views.ConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:RomMbox.UI.Behaviors">

    <UserControl.Resources>

        <!-- Dark TextBox -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1C2230"/>
            <Setter Property="Foreground" Value="#E6EBF5"/>
            <Setter Property="BorderBrush" Value="#2D374B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Dark PasswordBox -->
        <Style x:Key="DarkPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#1C2230"/>
            <Setter Property="Foreground" Value="#E6EBF5"/>
            <Setter Property="BorderBrush" Value="#2D374B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- Dark secondary button (Test) -->
        <Style x:Key="DarkSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1C2230"/>
            <Setter Property="Foreground" Value="#E6EBF5"/>
            <Setter Property="BorderBrush" Value="#2D374B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#4A6EDC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#283042"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <StackPanel>

        <TextBlock Text="Connection"
                   Style="{StaticResource PageHeader}"
                   Foreground="#FF7F7F7F"
                   FontWeight="Bold"/>
        <TextBlock Text="Configure your RomM server connection."
                   Style="{StaticResource HelperText}"
                   Margin="0,0,0,14"/>

        <!-- Status -->
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,14">
            <Ellipse Width="10"
                     Height="10"
                     Fill="{Binding StatusDotBrush}"
                     Margin="0,6,8,0"/>
            <TextBlock Text="{Binding StatusText}"
                       Foreground="{Binding StatusBrush}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Form -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Server -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Server Address"
                       Style="{StaticResource HelperText}"
                       Margin="0,0,14,0"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource DarkTextBox}"
                     Width="260"
                     Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Port -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Port"
                       Style="{StaticResource HelperText}"
                       Margin="0,10,14,0"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource DarkTextBox}"
                     Text="{Binding Port}"
                     Width="120"
                     HorizontalAlignment="Left"
                     Margin="0,10,0,0"/>

            <!-- Username -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Username"
                       Style="{StaticResource HelperText}"
                       Margin="0,10,14,0"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Row="2" Grid.Column="1"
                     Style="{StaticResource DarkTextBox}"
                     Width="260"
                     Text="{Binding Username}"
                     Margin="0,10,0,0"/>

            <!-- Password -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Password"
                       Style="{StaticResource HelperText}"
                       Margin="0,10,14,0"
                       VerticalAlignment="Center"/>

            <PasswordBox Grid.Row="3" Grid.Column="1"
                         Style="{StaticResource DarkPasswordBox}"
                         Width="260"
                         Margin="0,10,0,0"
                         behaviors:PasswordBoxBindingBehavior.BindPassword="True"
                         behaviors:PasswordBoxBindingBehavior.Password="{Binding Password, Mode=TwoWay}"/>

            <!-- Ignore Certificate -->
            <CheckBox Grid.Row="4" Grid.Column="1"
                      Content="Ignore Certificate"
                      IsChecked="{Binding IgnoreCertificate}"
                      Margin="0,12,0,0"
                      Foreground="#E6EBF5"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">

                <Button Content="Test"
                        Command="{Binding TestConnectionCommand}"
                        Width="110"
                        Margin="0,0,10,0"
                        Style="{StaticResource DarkSecondaryButton}"/>

                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="110"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>

        </Grid>
    </StackPanel>
</UserControl>
