<Window x:Class="RomMbox.UI.Views.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RomM"
        Height="200"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#141822">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RomMbox;component/UI/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#141822" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#F5F7FF"
                   TextWrapping="Wrap" />

        <TextBlock x:Name="MessageText"
                   Grid.Row="1"
                   Margin="0,10,0,0"
                   Foreground="#E6EBF5"
                   TextWrapping="Wrap" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Width="120" Style="{StaticResource PrimaryButton}" Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>
