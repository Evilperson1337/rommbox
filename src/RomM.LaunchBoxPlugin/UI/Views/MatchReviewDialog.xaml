<Window x:Class="RomMbox.UI.Views.MatchReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RomMbox.UI.ViewModels"
        mc:Ignorable="d"
        Title="Review Matches" Height="520" Width="920" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Review possible matches between RomM and existing LaunchBox games." FontSize="14"/>
            <TextBlock Text="Select one RomM match to apply." Foreground="#AAB4C8"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Matches}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RomM Title" Binding="{Binding RommTitle}" Width="2*"/>
                <DataGridTextColumn Header="LaunchBox Title" Binding="{Binding LaunchBoxTitle}" Width="2*"/>
                <DataGridTextColumn Header="Strategy" Binding="{Binding Strategy}" Width="120"/>
                <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence}" Width="120"/>
                <DataGridComboBoxColumn Header="Decision" Width="140"
                                        SelectedValueBinding="{Binding Decision, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedValuePath="Tag">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="ComboBoxItem">
                            <ComboBoxItem Content="Accept" Tag="True" />
                            <ComboBoxItem Content="Reject" Tag="False" />
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Apply" Width="120" Margin="0,0,8,0" Command="{Binding ApplyCommand}"/>
            <Button Content="Cancel" Width="120" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
