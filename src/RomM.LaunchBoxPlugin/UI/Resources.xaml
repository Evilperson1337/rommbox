<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:RomMbox.UI.Views"
                    xmlns:vm="clr-namespace:RomMbox.UI.ViewModels"
                    xmlns:converters="clr-namespace:RomMbox.UI.Converters">

    <!-- Colors -->
    <Color x:Key="BgColor">#12161E</Color>
    <Color x:Key="PanelColor">#181D28</Color>
    <Color x:Key="ContentColor">#1C2230</Color>
    <Color x:Key="BorderColor">#2D374B</Color>
    <Color x:Key="AccentColor">#3474FF</Color>
    <Color x:Key="TextColor">#E6EBF5</Color>
    <Color x:Key="MutedTextColor">#AAB4C8</Color>
    <Color x:Key="SuccessColor">#46DC8C</Color>
    <Color x:Key="DangerColor">#FF5656</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
    <SolidColorBrush x:Key="ContentBrush" Color="{StaticResource ContentColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />

    <!-- Converters -->
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

    <!-- Base Text -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <!-- Page header -->
    <Style x:Key="PageHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <Style x:Key="HelperText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- TextBox / PasswordBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#141822"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="#141822"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <!-- Buttons -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="34"/>
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Background" Value="#22283A"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.45"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#28304A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#20273C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="#3C8CFF"/>
    </Style>

    <!-- Nav ListBox -->
    <Style TargetType="ListBox" x:Key="NavListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <Style TargetType="ListBoxItem" x:Key="NavListBoxItem">
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        <Setter Property="Padding" Value="22,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Root"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="Indicator" Grid.Column="0" Background="Transparent"/>
                            <ContentPresenter Grid.Column="1"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,0,0,0"/>
                            <TextBlock Grid.Column="2" Margin="8,0,0,0"
                                       Text="ðŸ”’"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled, Converter={StaticResource InverseBoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#1A243A"/>
                            <Setter TargetName="Indicator" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#182033"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DataTemplates (VM -> View) -->
    <DataTemplate DataType="{x:Type vm:ConnectionViewModel}">
        <views:ConnectionView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PlatformsViewModel}">
        <views:PlatformsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ImportViewModel}">
        <views:ImportView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TestViewModel}">
        <views:TestView/>
    </DataTemplate>

</ResourceDictionary>
