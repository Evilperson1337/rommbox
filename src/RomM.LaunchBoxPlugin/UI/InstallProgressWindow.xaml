<Window x:Class="RomMbox.UI.InstallProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RomM Install"
        Height="160"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#141822">

    <Grid Background="#141822" Margin="16">
        <StackPanel>
            <TextBlock Text="{Binding HeaderText}" FontSize="16" FontWeight="SemiBold" Foreground="#F5F7FF"/>
            <Grid Height="24" Margin="0,12,0,8">
                <ProgressBar Minimum="0" Maximum="100" Height="16" VerticalAlignment="Center" Value="{Binding RoundedProgressValue, Mode=OneWay}" IsIndeterminate="{Binding IsIndeterminate}"/>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#F5F7FF"
                    Text="{Binding RoundedProgressValue, StringFormat={}{0:0}%}" />
            </Grid>
            <TextBlock Text="{Binding StatusText}" Foreground="#AAB4C8"/>
        </StackPanel>
    </Grid>
</Window>
